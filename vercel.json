{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": [
          "prisma/schema.prisma",
          "node_modules/@prisma/**",
          "node_modules/.prisma/**",
          "generated/prisma/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "methods": ["GET","POST","PUT","PATCH","DELETE","OPTIONS"],
      "dest": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 10
    }
  }
}